# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: OpenAI Organization ID
OPENAI_ORG_ID=org-your-organization-id

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# Hugging Face (if using HF models)
HF_TOKEN=hf_your-hugging-face-token

# Google Cloud (if using GCP services)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/credentials.json

# Azure (if using Azure services)
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Database (if implementing data persistence)
DATABASE_URL=sqlite:///./leadership_assessments.db

# Security
SECRET_KEY=your-secret-key-for-sessions

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=10

# File Upload Limits
MAX_FILE_SIZE_MB=50
MAX_AUDIO_DURATION_MINUTES=10
